{
    "name": "kokoen/chatter",
    "description": "Kokoen fork from devdojos chatter package. Long Term support intended",
    "authors": [
        {
            "name": "Kokoen GmbH",
            "email": "info@kokoen.net"
        }
    ],
    "require": {
        "luketowers/purifier": "~3.0"
    },
    "require-dev": {
        "illuminate/cache": "~5.1.20|5.2.*|5.3.*",
        "illuminate/console": "~5.1.20|5.2.*|5.3.*",
        "mockery/mockery": "^0.9.5",
        "phpunit/phpunit": "~5.7.14"
    },
    "autoload": {
	    "psr-4": {
	      "Kokoen\\Chatter\\": "/src"
		}
	},
    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "Kokoen\\Chatter\\KokoenChatterServiceProvider"
            ]
        }
    }
}
